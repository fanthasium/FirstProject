<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <data>
        <variable
            name="cardView"
            type="com.example.firstproject.InfoAdapter" />  //main activity가 맞나?.. 데이터만 넣어줄건데

    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <androidx.cardview.widget.CardView
            android:id="@+id/mainCardView"
            android:layout_width="200dp"
            android:layout_height="250dp"
            android:layout_margin="15dp"
            app:cardCornerRadius="10dp"
            app:cardElevation="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            tools:layout_editor_absoluteX="0dp"
            tools:layout_editor_absoluteY="0dp">

            <TextView
                android:id="@+id/getEmailTxtView"
                android:layout_width="match_parent"
                android:layout_gravity="top"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@{cardView.getEmail}"  <!-- 데이터 가져오기 -->
                android:layout_height="60dp"
                android:layout_margin="10dp" />

            <TextView
                android:id="@+id/getMkTimeTxtView"
                android:layout_gravity="center"
                android:gravity="center"
                android:textStyle="bold"
                android:text="@{cardView.getMkTime}"  <!-- 데이터 가져오기 -->
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:layout_margin="10dp" />

        </androidx.cardview.widget.CardView>
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>